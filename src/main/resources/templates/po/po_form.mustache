{{!
    This Mustache template acts as a shell for the dynamic Purchase Order form.
    The main content is rendered by JavaScript using the JSON data provided below.
}}
<!DOCTYPE html>
<html lang="en">
<head>
    {{! ... standard head elements ... }}
    <meta charset="UTF-8">
    <title>Purchase Order</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
<div class="d-flex" id="wrapper">
    {{> layout/sidebar}}
    <div id="page-content-wrapper">
        {{> layout/header}}
        <main class="container-fluid p-4">
            {{!
                 JSON Data Island.
                 The entire data model for the PO is injected here as a JSON string.
                 JavaScript will read this to build the initial state of the UI.
             }}
            <script id="po-data" type="application/json">{{{poJson}}}</script>

            <form id="poForm">
                {{! ... Page header and buttons ... }}
                <div class="mb-3">
                    <a href="/purchase_orders" class="btn btn-link-custom"><i class="bi bi-arrow-left me-1"></i>Back</a>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h1 class="h5 mb-0 text-gradient-custom">
                        <i class="bi bi-cart-check-fill me-1"></i>Purchase Order: <span id="poNumberSpan"></span>
                    </h1>
                    <div>
                        <button type="button" id="savePoBtn" class="btn btn-custom-gradient rounded-pill px-4 py-2" style="display: none;">
                            <i class="bi bi-save-fill me-1"></i> Save
                        </button>
                        <button type="button" id="submitPoBtn" class="btn btn-outline-success rounded-pill px-4 py-2" style="display: none;">
                            <i class="bi bi-send-check-fill me-1"></i> Submit for Approval
                        </button>
                        <button type="button" id="printPoBtn" class="btn btn-secondary rounded-pill px-4 py-2" style="display: none;">
                            <i class="bi bi-printer-fill me-1"></i> Print
                        </button>
                    </div>
                </div>

                {{! ... Page header and buttons ... }}

                <div class="card mb-4">
                    {{! Form header inputs}}
                    {{! These will be populated by JavaScript from the poJson data. }}
                    <div class="card-header text-gradient-custom">Order Information</div>
                    <div class="card-body">
                        <input type="hidden" id="purchaseOrderId">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="supplierId" class="form-label">Supplier <span class="text-danger">*</span></label>
                                <select class="form-select" id="supplierId" required></select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="purchaseOrderNo" class="form-label">PO Number <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="purchaseOrderNo" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="poDate" class="form-label">PO Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="poDate" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="arrivalDate" class="form-label">Arrival Date</label>
                                <input type="date" class="form-control" id="arrivalDate">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="currencyCode" class="form-label">Currency</label>
                                <input type="text" class="form-control" id="currencyCode" readonly>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="deliveryTerm" class="form-label">Delivery Term</label>
                                <input type="text" class="form-control" id="deliveryTerm">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="paymentTerm" class="form-label">Payment Term</label>
                                <input type="text" class="form-control" id="paymentTerm">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="status" class="form-label">Status</label>
                                <input type="text" class="form-control" id="status" readonly>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="totalAmount" class="form-label">Total Amount</label>
                                <input type="text" class="form-control text-end" id="totalAmount" readonly>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header text-gradient-custom"><i class="bi bi-list-ul me-1"></i>Order Details</div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-modern table-po-details">
                                <thead class="table-light">
                                {{! Static table headers }}
                            <tr>
                                <th style="width: 3%;"><input class="form-check-input" type="checkbox" id="selectAllDetailsCheckbox"></th>
                                <th class="col-type">Material Type</th>
                                <th class="col-longCode">Material Group</th>
                                <th class="col-longCode">Material Code</th>
                                <th class="col-name">Material Name</th>
                                <th class="col-code">Color</th>
                                <th class="col-code">Size</th>
                                <th class="col-code">UOM</th>
                                <th class="col-code">Qty</th>
                                <th class="col-code">Price</th>
                                <th class="col-code">Tax Rate</th>
                                <th class="col-longCode">Received Qty</th>
                                <th class="col-longCode">Amount</th>
                                <th class="col-code text-center">Action</th>
                            </tr>
                            </thead>
                                {{!
                                    The table body is intentionally empty.
                                    JavaScript will dynamically create and insert all rows here.
                                }}
                                <tbody id="poDetailsTableBody"></tbody>
                            </table>
                        </div>
                        {{! ... Add/Delete buttons for the table ... }}
                        <div class="mt-3">
                                <button type="button" id="addDetailBtn" class="btn btn-sm btn-custom-gradient rounded-pill px-3 py-2 me-2">
                                    <i class="bi bi-plus-circle me-1"></i> Add Detail
                                </button>

                            <button type="button" id="deleteSelectedDetailsBtn" class="btn btn-sm btn-delete-gradient rounded-pill px-3 py-2">
                                <i class="bi bi-trash me-1"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </main>
        {{> layout/footer}}
    </div>
</div>

{{> layout/scripts}}

<template id="material-groups-data-template">
    <option value="">-- Group --</option>
    {{#materialGroups}}
        <option value="{{materialGroupId}}">{{materialGroupName}}</option>
    {{/materialGroups}}
</template>

<script src="/js/po-form.js"></script>
</body>
</html>

