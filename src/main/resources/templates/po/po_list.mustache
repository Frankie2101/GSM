{{!
    This template acts as a "shell" for the client-side rendered PO list page.
    The main table body is intentionally empty and will be populated by po-list.js.
}}
<!DOCTYPE html>
<html lang="en">
<head>
    {{! ... standard head ... }}
    <meta charset="UTF-8">
    <title>Purchase Order List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    {{#_csrf}}
        <meta name="_csrf" content="{{token}}">
        <meta name="_csrf_header" content="{{headerName}}">
    {{/_csrf}}
</head>
<body>
<div class="d-flex" id="wrapper">
    {{> layout/sidebar}}
    <div id="page-content-wrapper">
        {{> layout/header}}
        <main class="container-fluid p-4">
            {{! ... page title and search card ... }}

            <h1 class="h5 mb-3 text-gradient-custom"><i class="bi bi-cart-check-fill me-2"></i>Purchase Order</h1>

            <div class="card mb-4">
                <div class="card-body">
                    <div class="row align-items-end">
                        <div class="col-md-8">
                            <label for="searchInput" class="form-label">Search</label>

                            <input type="text" class="form-control" id="searchInput" placeholder="Enter PO No, or Supplier Name...">
                        </div>
                        <div class="col-md-4 d-flex justify-content-end">

                            <button class="btn btn-custom-gradient rounded-pill px-4 me-2" id="searchBtn"><i class="bi bi-search me-1"></i> Search</button>
                        </div>
                    </div>

                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    Result
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                            {{! The static table headers are defined here }}
                            <tr>
                                <th style="width: 5%;">Seq</th>
                                <th>PO Number</th>
                                <th>Supplier</th>
                                <th>PO Date</th>
                                <th>Arrival Date</th>
                                <th>Currency</th>
                                <th>Delivery Term</th>
                                <th>Payment Term</th>
                                <th class="text-end">Total Amount</th>
                                <th>Status</th>
                                <th class="text-center">Action</th>
                            </tr>
                            </thead>
                            {{!
                                The table body is empty on initial load.
                                `po-list.js` will fetch data and render all `<tr>` rows here.
                            }}
                            <tbody id="po-table-body">

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </main>
        {{> layout/footer}}
    </div>
</div>
{{> layout/scripts}}
<script>
    // Pass CSRF token and user permissions to the JavaScript file
    const csrfToken = {
        headerName: "{{_csrf.headerName}}",
        token: "{{_csrf.token}}"
    };
    const userPermissions = {
    canView: {{#userPermissions.PURCHASE_ORDER_VIEW}}true{{/userPermissions.PURCHASE_ORDER_VIEW}}{{^userPermissions.PURCHASE_ORDER_VIEW}}false{{/userPermissions.PURCHASE_ORDER_VIEW}},
    canPrint: {{#userPermissions.PURCHASE_ORDER_PRINT}}true{{/userPermissions.PURCHASE_ORDER_PRINT}}{{^userPermissions.PURCHASE_ORDER_PRINT}}false{{/userPermissions.PURCHASE_ORDER_PRINT}}
    };
</script>
<script src="/js/po-list.js"></script>
</body>
</html>