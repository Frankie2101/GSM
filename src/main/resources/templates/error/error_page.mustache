{{!
  This template inherits from the main layout (_layout.mustache).
}}
{{> layout/_layout}}

{{!
  Overrides the "pageTitle" block in the layout.
}}
{{#partial "pageTitle"}}Error{{/partial}}

{{!
  Overrides the "content" block in the layout to display the error information.
  The errorStatus and errorMessage variables are passed from the GlobalExceptionHandler.
}}
{{#partial "content"}}
    <div class="container text-center mt-5">
        <h1 class="display-1">{{errorStatus}}</h1>
        <p class="lead text-muted">{{errorMessage}}</p>
        <a href="/dashboard" class="btn btn-primary mt-3">Go to Dashboard</a>
    </div>
{{/partial}}