{{!
    This is the Mustache template for the Fabric creation and editing form.
    It renders the main layout, input fields for fabric information, and a dynamic
    table for managing fabric colors.
}}
<!DOCTYPE html>
<html lang="en">
<head>
    {{! Standard head elements: SweetAlert2, Bootstrap, custom CSS }}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fabric - Garment Simple MES</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
<div class="d-flex" id="wrapper">
    {{! Import the sidebar template }}
    {{> layout/sidebar}}
    <div id="page-content-wrapper">
        {{! Import the header template }}
        {{> layout/header}}

        <main class="container-fluid p-4">
            {{!
                Display success/error messages passed from the controller via RedirectAttributes.
                These are dismissible alerts for a better user experience.
            }}
            {{#successMessage}}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{successMessage}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {{/successMessage}}
            {{#errorMessage}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{errorMessage}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {{/errorMessage}}

            {{#fabric}}
                <div class="mb-2 d-flex align-items-center">
                    <h1 class="h5 mb-0 text-gradient-custom">
                        {{! Conditional title: Show "Edit Fabric" if fabricId exists (edit mode) }}
                        {{#fabricId}}Edit Fabric{{/fabricId}}
                        {{! Otherwise, show "Create New Fabric" (create mode) }}
                        {{^fabricId}}Create New Fabric{{/fabricId}}
                    </h1>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <a href="/fabrics" class="btn btn-link-custom"><i class="bi bi-arrow-left me-1"></i>Back</a>
                    <div>
                        {{! The submit button for the form below }}
                        <button type="submit" form="fabricForm" class="btn btn-custom-gradient rounded-pill px-4 py-2">Save</button>
                    </div>
                </div>

                <form action="/fabrics/save" method="post" id="fabricForm">
                    {{!
                        Hidden input for CSRF protection. Spring Security provides the _csrf object.
                    }}
                    {{#_csrf}}
                        <input type="hidden" name="{{parameterName}}" value="{{token}}"/>
                    {{/_csrf}}

                    {{! Hidden input to submit the fabricId during an update }}
                    <input type="hidden" name="fabricId" value="{{#fabricId}}{{.}}{{/fabricId}}">

                    <div class="card mb-4">
                        <div class="card-header text-gradient-custom"><i class="bi bi-info-circle me-1"></i>Fabric Information</div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label for="materialGroupId" class="form-label">Material Group <span class="text-danger">*</span></label>
                                    <select class="form-select" id="materialGroupId" name="materialGroupId" required {{#fabricId}}disabled{{/fabricId}}>
                                        <option value="">-- Select a Group --</option>
                                        {{#materialGroups}}
                                            <option value="{{id}}" {{#selected}}selected{{/selected}}>{{name}}</option>
                                        {{/materialGroups}}
                                    </select>
                                    {{#fabricId}}
                                        <input type="hidden" name="materialGroupId" value="{{materialGroupId}}" />
                                    {{/fabricId}}
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="fabricCode" class="form-label">Fabric Code <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="fabricCode" name="fabricCode" value="{{#fabricCode}}{{.}}{{/fabricCode}}" required {{#fabricId}}readonly{{/fabricId}} maxlength="50">
                                </div>
                                <div class="col-md-8 mb-3">
                                    <label for="fabricName" class="form-label">Fabric Name <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="fabricName" name="fabricName" value="{{#fabricName}}{{.}}{{/fabricName}}" required maxlength="100">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label for="supplierId" class="form-label">Supplier <span class="text-danger">*</span></label>
                                    <select class="form-select" id="supplierId" name="supplierId" required>
                                        <option value="">-- Select a Supplier --</option>
                                        {{#suppliers}}
                                            <option value="{{id}}" {{#selected}}selected{{/selected}}>{{name}}</option>
                                        {{/suppliers}}
                                    </select>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="unitId" class="form-label">Unit <span class="text-danger">*</span></label>
                                    <select class="form-select" id="unitId" name="unitId" required {{#fabricId}}disabled{{/fabricId}}>
                                        <option value="">-- Select a Unit --</option>
                                        {{#units}}
                                            <option value="{{id}}" {{#selected}}selected{{/selected}}>{{name}}</option>
                                        {{/units}}
                                    </select>
                                    {{#fabricId}}
                                        <input type="hidden" name="unitId" value="{{unitId}}" />
                                    {{/fabricId}}
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="fabricType" class="form-label">Fabric Type</label>
                                    <input type="text" class="form-control" id="fabricType" name="fabricType" value="{{#fabricType}}{{.}}{{/fabricType}}" maxlength="50">
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-md-4 mb-3">
                                    <label for="construction" class="form-label">Construction</label>
                                    <input type="text" class="form-control" id="construction" name="construction" value="{{#construction}}{{.}}{{/construction}}" maxlength="100">
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="yarnCount" class="form-label">Yarn Count</label>
                                    <input type="text" class="form-control" id="yarnCount" name="yarnCount" value="{{#yarnCount}}{{.}}{{/yarnCount}}" maxlength="50">
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="finishing" class="form-label">Finishing</label>
                                    <input type="text" class="form-control" id="finishing" name="finishing" value="{{#finishing}}{{.}}{{/finishing}}" maxlength="100">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label for="fabricContent" class="form-label">Fabric Content</label>
                                    <textarea class="form-control" id="fabricContent" name="fabricContent" rows="2" maxlength="255">{{#fabricContent}}{{.}}{{/fabricContent}}</textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- ========== FABRIC COLORS (DETAIL) ========== -->
                    <div class="card mb-4">
                        <div class="card-header text-gradient-custom"><i class="bi bi-palette-fill me-1"></i> Fabric Colors</div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover">
                                    <thead class="table-light">
                                    {{! Table headers for the colors detail section }}
                                    <tr>
                                        <th style="width: 5%;" class="text-center align-middle"><input class="form-check-input" type="checkbox" id="selectAllCheckbox"></th>
                                        <th style="width: 20%;">Color Code <span class="text-danger">*</span></th>
                                        <th style="width: 25%;">Color Name</th>
                                        <th style="width: 15%;">Width</th>
                                        <th style="width: 15%;">Net Price</th>
                                        <th style="width: 10%;">Tax %</th>
                                        <th style="width: 10%;" class="text-center">Action</th>
                                    </tr>
                                    </thead>

                                    <tbody id="fabricColorTableBody">
                                    {{!
                                       Loop through the 'fabricColors' list within the main 'fabric' object.
                                       This renders the existing color rows when in edit mode.
                                   }}
                                    {{#fabricColors}}
                                        <tr>
                                            <td class="text-center align-middle">
                                                <input class="form-check-input row-checkbox" type="checkbox" {{^deletable}}disabled{{/deletable}}>
                                            </td>

                                            <input type="hidden" data-name="fabricColorId" value="{{#fabricColorId}}{{.}}{{/fabricColorId}}">
                                            <td><input type="text" data-name="color" value="{{#color}}{{.}}{{/color}}" class="form-control" required {{#fabricColorId}}readonly{{/fabricColorId}} maxlength="50"></td>
                                            <td><input type="text" data-name="colorName" value="{{#colorName}}{{.}}{{/colorName}}" class="form-control" maxlength="100"></td>
                                            <td><input type="text" data-name="width" value="{{#width}}{{.}}{{/width}}" class="form-control" maxlength="50"></td>
                                            <td><input type="number" step="0.01" min="0" data-name="netPrice" value="{{#netPrice}}{{.}}{{/netPrice}}" class="form-control"></td>
                                            <td><input type="number" step="0.01" min="0" data-name="taxPercent" value="{{#taxPercent}}{{.}}{{/taxPercent}}" class="form-control"></td>

                                            <td class="text-center align-middle">
                                                {{#deletable}}
                                                    <button type="button" class="btn btn-sm btn-outline-danger delete-row-btn"><i class="bi bi-trash"></i></button>
                                                {{/deletable}}
                                                {{^deletable}}
                                                    <span class="text-muted" title="Cannot delete: used in an Order BOM">
                                                        <i class="bi bi-lock-fill"></i>
                                                    </span>
                                                {{/deletable}}
                                            </td>
                                        </tr>
                                    {{/fabricColors}}
                                    </tbody>

                                </table>
                            </div>
                            <div class="mt-3">
                                {{! Buttons to dynamically add/remove rows using JavaScript }}
                                <button type="button" id="add-color-btn" class="btn btn-custom-gradient rounded-pill px-3 py-2 me-2"><i class="bi bi-plus-circle me-1"></i> New Detail</button>
                                <button type="button" id="delete-selected-btn" class="btn btn-delete-gradient rounded-pill px-3 py-2">
                                    <i class="bi bi-trash me-1"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            {{/fabric}}
        </main>
        {{> layout/footer}}
    </div>
</div>
{{> layout/scripts}}
{{! Link to the specific JavaScript file for this page's interactivity }}
<script src="/js/fabric-form.js"></script>
</body>
</html>
