<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trim - Garment Simple MES</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
<div class="d-flex" id="wrapper">
    {{> layout/sidebar}}
    <div id="page-content-wrapper">
        {{> layout/header}}
        <main class="container-fluid p-4">
            {{#successMessage}}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{successMessage}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {{/successMessage}}
            {{#errorMessage}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{errorMessage}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {{/errorMessage}}

            {{#trim}}
                <div class="mb-2 d-flex align-items-center">
                    <h1 class="h5 mb-0 text-gradient-custom">
                        {{#trimId}}Edit Trim{{/trimId}}
                        {{^trimId}}Create New Trim{{/trimId}}
                    </h1>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <a href="/trims" class="btn btn-link-custom"><i class="bi bi-arrow-left me-1"></i>Back</a>
                    <div>
                        <button type="submit" form="trimForm" class="btn btn-custom-gradient rounded-pill px-4 py-2">Save</button>
                    </div>
                </div>

                <form action="/trims/save" method="post" id="trimForm">
                    {{#_csrf}}
                        <input type="hidden" name="{{parameterName}}" value="{{token}}"/>
                    {{/_csrf}}
                    <input type="hidden" name="trimId" value="{{#trimId}}{{.}}{{/trimId}}">

                    <!-- ========== TRIM INFORMATION ========== -->
                    <div class="card mb-4">
                        <div class="card-header text-gradient-custom"><i class="bi bi-info-circle me-1"></i>Trim Information</div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="materialGroupId" class="form-label">Material Group <span class="text-danger">*</span></label>
                                    <select class="form-select" id="materialGroupId" name="materialGroupId" required {{#trimId}}disabled{{/trimId}}>
                                        <option value="">-- Select a Group --</option>
                                        {{#materialGroups}}
                                            <option value="{{id}}" {{#selected}}selected{{/selected}}>{{name}}</option>
                                        {{/materialGroups}}
                                    </select>
                                    {{#trimId}}
                                        <input type="hidden" name="materialGroupId" value="{{materialGroupId}}" />
                                    {{/trimId}}
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="trimCode" class="form-label">Trim Code <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="trimCode" name="trimCode" value="{{#trimCode}}{{.}}{{/trimCode}}" required {{#trimId}}readonly{{/trimId}} maxlength="50">
                                </div>
                                <div class="col-md-8 mb-3">
                                    <label for="trimName" class="form-label">Trim Name <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="trimName" name="trimName" value="{{#trimName}}{{.}}{{/trimName}}" required maxlength="100">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="supplierId" class="form-label">Supplier <span class="text-danger">*</span></label>
                                    <select class="form-select" id="supplierId" name="supplierId" required>
                                        <option value="">-- Select a Supplier --</option>
                                        {{#suppliers}}
                                            <option value="{{id}}" {{#selected}}selected{{/selected}}>{{name}}</option>
                                        {{/suppliers}}
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="unitId" class="form-label">Unit <span class="text-danger">*</span></label>
                                    <select class="form-select" id="unitId" name="unitId" required {{#trimId}}disabled{{/trimId}}>
                                        <option value="">-- Select a Unit --</option>
                                        {{#units}}
                                            <option value="{{id}}" {{#selected}}selected{{/selected}}>{{name}}</option>
                                        {{/units}}
                                    </select>
                                    {{#trimId}}
                                        <input type="hidden" name="unitId" value="{{unitId}}" />
                                    {{/trimId}}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label for="technicalReference" class="form-label">Technical Reference</label>
                                    <textarea class="form-control" id="technicalReference" name="technicalReference" rows="2" maxlength="255">{{#technicalReference}}{{.}}{{/technicalReference}}</textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- ========== TRIM VARIANTS (DETAIL) ========== -->
                    <div class="card mb-4">
                        <div class="card-header text-gradient-custom"><i class="bi bi-palette-fill me-1"></i> Trim Variants</div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover">
                                    <thead class="table-light">
                                    <tr>
                                        <th style="width: 5%;" class="text-center align-middle">
                                            <input class="form-check-input" type="checkbox" id="selectAllCheckbox">
                                        </th>
                                        <th style="width: 15%;">Color Code <span class="text-danger">*</span></th>
                                        <th style="width: 25%;">Color Name</th>
                                        <th style="width: 20%;">Size Code (e.g., 120,180) <span class="text-danger">*</span></th>
                                        <th style="width: 15%;">Net Price</th>
                                        <th style="width: 10%;">Tax Rate</th>
                                        <th style="width: 10%;" class="text-center">Action</th>
                                    </tr>
                                    </thead>
                                    <tbody id="variantTableBody">
                                    {{#variants}}
                                        <tr>
                                            <td class="text-center align-middle">
                                                <input class="form-check-input row-checkbox" type="checkbox" {{^deletable}}disabled{{/deletable}}>
                                            </td>
                                            <input type="hidden" data-name="trimVariantId" value="{{#trimVariantId}}{{.}}{{/trimVariantId}}">
                                            <td><input type="text" data-name="colorCode" value="{{#colorCode}}{{.}}{{/colorCode}}" class="form-control" required {{#trimVariantId}}readonly{{/trimVariantId}} maxlength="50"></td>
                                            <td><input type="text" data-name="colorName" value="{{#colorName}}{{.}}{{/colorName}}" class="form-control" maxlength="100"></td>
                                            <td><input type="text" data-name="sizeCode" value="{{#sizeCode}}{{.}}{{/sizeCode}}" class="form-control" required {{#trimVariantId}}readonly{{/trimVariantId}} maxlength="50"></td>
                                            <td><input type="number" step="0.01" min="0" data-name="netPrice" value="{{#netPrice}}{{.}}{{/netPrice}}" class="form-control"></td>
                                            <td><input type="number" step="0.01" min="0" data-name="taxRate" value="{{#taxRate}}{{.}}{{/taxRate}}" class="form-control"></td>
                                            <td class="text-center align-middle">
                                                {{#deletable}}
                                                    <button type="button" class="btn btn-sm btn-outline-danger delete-row-btn"><i class="bi bi-trash"></i></button>
                                                {{/deletable}}
                                                {{^deletable}}
                                                    <span class="text-muted" title="Cannot delete, already existing in BOM">
                                                        <i class="bi bi-lock-fill"></i>
                                                    </span>
                                                {{/deletable}}
                                            </td>
                                        </tr>
                                    {{/variants}}
                                    </tbody>
                                </table>
                            </div>
                            <div class="mt-3">
                                <button type="button" id="addVariantBtn" class="btn btn-custom-gradient rounded-pill px-3 py-2 me-2"><i class="bi bi-plus-circle me-1"></i> New Detail</button>
                                <button type="button" id="deleteSelectedBtn" class="btn btn-delete-gradient rounded-pill px-3 py-2"><i class="bi bi-trash me-1"></i> Delete</button>
                            </div>
                        </div>
                    </div>
                </form>
            {{/trim}}
        </main>
        {{> layout/footer}}
    </div>
</div>
{{> layout/scripts}}
<script src="/js/trim-form.js"></script>
</body>
</html>
