<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create BOM - Garment Simple MES</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
<div class="d-flex" id="wrapper">
    {{> layout/sidebar}}
    <div id="page-content-wrapper">
        {{> layout/header}}
        <main class="container-fluid p-4">
            {{#successMessage}}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{successMessage}}<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {{/successMessage}}
            {{#errorMessage}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{errorMessage}}<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {{/errorMessage}}

            {{#orderBOM}}
                <form action="/order-boms/save" method="post" id="orderBOMForm">
                    <input type="hidden" name="orderBOMId" value="{{#orderBOMId}}{{.}}{{/orderBOMId}}">
                    <input type="hidden" id="saleOrderId" name="saleOrderId" value="{{saleOrderId}}">

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h1 class="h5 mb-0 text-gradient-custom">Create BOM</h1>
                        <div>
                            <a href="/sale-orders/form?id={{saleOrderId}}" class="btn btn-link-custom">Close</a>
                            <button type="submit" class="btn btn-custom-gradient rounded-pill px-4 py-2">Generate PO</button>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header text-gradient-custom"><i class="bi bi-info-circle me-1"></i>BOM Information</div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <label class="form-label">Sale Order No</label>
                                    <input type="text" class="form-control" value="{{saleOrderNo}}" readonly>
                                </div>
                                <div class="col-md-4">
                                    <label for="bomTemplateId" class="form-label">BOM Template</label>
                                    <select class="form-select" id="bomTemplateId" name="bomTemplateId" required>
                                        <option value="">-- Please select --</option>
                                        {{#bomTemplates}}
                                            <option value="{{bomTemplateId}}" {{#selected}}selected{{/selected}}>{{bomTemplateName}}</option>
                                        {{/bomTemplates}}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header text-gradient-custom"><i class="bi bi-list-ul me-1"></i>BOM Details</div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover table-modern">
                                    <thead class="table-light">
                                    <tr>
                                        <th style="width: 5%;" class="align-middle text-center"><input class="form-check-input" type="checkbox" id="selectAllCheckbox"></th>
                                        <th>Seq</th>
                                        <th>Material Group</th>
                                        <th>Material Type</th>
                                        <th>Material Code</th>
                                        <th class="col-wide">Material Name</th>
                                        <th class="col-medium">Color</th>
                                        <th class="col-wide">Color Name</th>
                                        <th class="col-wide">Size</th>
                                        <th class="col-wide">Unit</th>
                                        <th class="col-super">Supplier</th>
                                        <th class="col-normal">Price</th>
                                        <th class="col-normal">Currency</th>
                                        <th class="col-normal">Usage</th>
                                        <th class="col-normal">Waste %</th>
                                        <th class="col-medium">SO Qty</th>
                                        <th class="col-medium">Demand Qty</th>
                                        <th class="col-medium">Inventory Qty</th>
                                        <th class="col-medium">Purchase Qty</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                    </thead>
                                    <tbody id="bomDetailTableBody">
                                    </tbody>
                                </table>
                            </div>
                            <div class="mt-3">
                                <button type="button" id="addDetailBtn" class="btn btn-custom-gradient rounded-pill px-3 py-2 btn-sm me-2">
                                    <i class="bi bi-plus-circle me-1"></i> Add Detail
                                </button>
                                <button type="button" id="deleteSelectedBtn" class="btn btn-delete-gradient rounded-pill px-3 py-2 btn-sm">
                                    <i class="bi bi-trash me-1"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            {{/orderBOM}}
        </main>
        {{> layout/footer}}
    </div>
</div>
{{> layout/scripts}}

<script id="initial-bom-details" type="application/json">
    {{{detailsJson}}}
</script>

<template id="units-data-template">
    <option value="">-- Unit --</option>
    {{#units}}<option value="{{unitName}}">{{unitName}}</option>{{/units}}
</template>
<template id="suppliers-data-template">
    <option value="">-- Supplier --</option>
    {{#suppliers}}
        <option value="{{supplierName}}" data-currency="{{currencyCode}}">{{supplierName}}</option>
    {{/suppliers}}
</template>
<template id="material-groups-data-template">
    <option value="">-- Group --</option>
    {{#materialGroups}}<option value="{{materialGroupId}}">{{materialGroupName}}</option>{{/materialGroups}}
</template>

<script src="/js/order-bom-form.js"></script>
</body>
</html>