{{!
    Template for the Order BOM creation/editing form.
    This UI is highly dynamic, built and managed by order-bom-form.js.
}}
<!DOCTYPE html>
<html lang="en">
<head>
    {{! CSRF tokens are placed in meta tags for easy access by JavaScript fetch API }}
    {{#_csrf}}
        <meta name="_csrf" content="{{token}}">
        <meta name="_csrf_header" content="{{headerName}}">
    {{/_csrf}}

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create BOM - Garment Simple MES</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
<div class="d-flex" id="wrapper">
    {{> layout/sidebar}}
    <div id="page-content-wrapper">
        {{> layout/header}}
        <main class="container-fluid p-4">

            {{! ... success/error messages ... }}
            {{#successMessage}}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{successMessage}}<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {{/successMessage}}
            {{#errorMessage}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{errorMessage}}<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {{/errorMessage}}

            {{#orderBOM}}

                <form action="/order-boms/save" method="post" id="orderBOMForm">
                    {{! ... hidden inputs for CSRF, orderBOMId, saleOrderId ... }}
                    {{#_csrf}}
                        <input type="hidden" name="{{parameterName}}" value="{{token}}"/>
                    {{/_csrf}}
                    <input type="hidden" name="orderBOMId" value="{{#orderBOMId}}{{.}}{{/orderBOMId}}">
                    <input type="hidden" id="saleOrderId" name="saleOrderId" value="{{saleOrderId}}">

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h1 class="h5 mb-0 text-gradient-custom">Create BOM</h1>
                        <div>
                            <a href="/sale-orders/form?id={{saleOrderId}}" class="btn btn-link-custom">Back to SO</a>
                            <button type="button" id="generatePoBtn" class="btn btn-custom-gradient rounded-pill px-4 py-2">Generate PO</button>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header text-gradient-custom"><i class="bi bi-info-circle me-1"></i>BOM Information</div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <label class="form-label">Sale Order No</label>
                                    <input type="text" class="form-control" value="{{saleOrderNo}}" readonly>
                                </div>
                                <div class="col-md-4">
                                    {{! Selecting a template will trigger a JS event to load details }}
                                    <label for="bomTemplateId" class="form-label">BOM Template</label>
                                    <select class="form-select" id="bomTemplateId" name="bomTemplateId" required>
                                        <option value="">-- Please select --</option>
                                        {{#bomTemplates}}
                                            <option value="{{bomTemplateId}}" {{#selected}}selected{{/selected}}>{{bomTemplateName}}</option>
                                        {{/bomTemplates}}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header text-gradient-custom"><i class="bi bi-list-ul me-1"></i>BOM Details</div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover table-modern">
                                    <thead class="table-light">

                                    {{! Table headers for the extensive BOM details }}
                                    <tr>
                                        <th style="width: 2%;" class="align-middle text-center"><input class="form-check-input" type="checkbox" id="selectAllCheckbox"></th>
                                        <th class="col-narrow">Seq</th>
                                        <th class="col-wide">Material Group</th>
                                        <th class="col-medium">Material Type</th>
                                        <th class="col-wide">Material Code</th>
                                        <th class="col-super">Material Name</th>
                                        <th class="col-medium">Color</th>
                                        <th class="col-wide">Color Name</th>
                                        <th class="col-medium">Size</th>
                                        <th class="col-medium">Unit</th>
                                        <th class="col-max">Supplier</th>
                                        <th class="col-wide">Price</th>
                                        <th class="col-normal">Currency</th>
                                        <th class="col-normal">Usage</th>
                                        <th class="col-normal">Waste %</th>
                                        <th class="col-normal">SO Qty</th>
                                        <th class="col-medium">Demand Qty</th>
                                        <th class="col-medium">Inventory Qty</th>
                                        <th class="col-medium">Purchase Qty</th>
                                        <th class="col-normal text-center">Action</th>
                                    </tr>
                                    </thead>

                                    {{! The table body is intentionally empty. JS will populate it. }}
                                    <tbody id="bomDetailTableBody">
                                    </tbody>
                                </table>
                            </div>

                            {{! ... Add/Delete buttons for dynamic rows ... }}
                            <div class="mt-3">
                                <button type="button" id="addDetailBtn" class="btn btn-custom-gradient rounded-pill px-3 py-2 btn-sm me-2">
                                    <i class="bi bi-plus-circle me-1"></i> Add Detail
                                </button>
                                <button type="button" id="deleteSelectedBtn" class="btn btn-delete-gradient rounded-pill px-3 py-2 btn-sm">
                                    <i class="bi bi-trash me-1"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            {{/orderBOM}}

            <div class="modal fade" id="generatePoModal" tabindex="-1" aria-labelledby="generatePoModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-fullscreen-xl-down">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title text-gradient-custom" id="generatePoModalLabel">
                                <i class="bi bi-file-earmark-check me-2"></i>Generate PO
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">

                            <div class="table-responsive">
                                <table class="table table-bordered table-hover table-modern">
                                    <thead class="table-light">
                                    <tr>
                                        <th class="col-midSmall">Material Group</th>
                                        <th class="col-midSmall">Material Type</th>
                                        <th class="col-midSmall">Material Code</th>
                                        <th class="col-narrow">Material Name</th>
                                        <th class="col-small">Color</th>
                                        <th class="col-midSmall">Color Name</th>
                                        <th class="col-small">Size</th>
                                        <th class="col-small">Unit</th>
                                        <th class="col-narrow">Supplier</th>
                                        <th class="col-small">Price</th>
                                        <th class="col-small">Currency</th>
                                        <th class="col-midSmall">Purchase Qty</th>
                                    </tr>
                                    </thead>
                                    <tbody id="poPreviewTableBody">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" id="confirmPoGenerationBtn" class="btn btn-custom-gradient">
                                <i class="bi bi-check-circle me-1"></i> Confirm
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </main>
        {{> layout/footer}}
    </div>
</div>
{{> layout/scripts}}

{{!
    JSON Data Island for initial details.
    Used to "hydrate" the form with existing data when in edit mode.
}}

<script id="initial-bom-details" type="application/json">
    {{{detailsJson}}}
</script>

{{!
    HTML <template> tags are used as client-side templates for dropdown options.
    JS clones the content of these templates to efficiently populate selects in new rows.
}}
<template id="units-data-template">
    <option value="">-- Unit --</option>
    {{#units}}<option value="{{unitName}}">{{unitName}}</option>{{/units}}
</template>
<template id="suppliers-data-template">
    <option value="">-- Supplier --</option>
    {{#suppliers}}
        <option value="{{supplierName}}" data-currency="{{currencyCode}}">{{supplierName}}</option>
    {{/suppliers}}
</template>
<template id="material-groups-data-template">
    <option value="">-- Group --</option>
    {{#materialGroups}}<option value="{{materialGroupId}}">{{materialGroupName}}</option>{{/materialGroups}}
</template>

<script src="/js/order-bom-form.js"></script>
</body>
</html>