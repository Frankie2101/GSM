{{!
    This is the Mustache template for the BOM Template list page.
    It displays a search bar and a table of all existing BOM templates.
}}
<!DOCTYPE html>
<html lang="en">
<head>
    {{! ... Standard head elements ... }}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BOM Template - Garment Simple MES</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<div class="d-flex" id="wrapper">
    {{> layout/sidebar}}
    <div id="page-content-wrapper">
        {{> layout/header}}
        <main class="container-fluid p-4">
            <div class="d-flex align-items-center mb-4">
                <h1 class="h3 m-0"><i class="bi bi-journal-richtext me-2"></i>BOM Template</h1>
            </div>

            {{! Search and actions card }}
            <div class="card mb-4">
                <div class="card-body">
                    <form action="/bom-templates" method="get" id="searchForm">
                        <div class="row align-items-end gy-3">
                            <div class="col-md-7">
                                <label for="keyword" class="form-label">Search</label>
                                <input type="text" class="form-control" id="keyword" name="keyword" placeholder="Enter template code or name..." value="{{#keyword}}{{.}}{{/keyword}}">
                            </div>
                            <div class="col-md-5 d-flex justify-content-start justify-content-md-end">
                                <button type="submit" class="btn btn-custom-gradient rounded-pill px-4 me-2"><i class="bi bi-search me-1"></i> Search</button>
                                <a href="/bom-templates/form" class="btn btn-custom-gradient rounded-pill px-4 me-2"><i class="bi bi-plus-circle me-1"></i> Create</a>
                                <button type="button" id="deleteBtn" class="btn btn-delete-gradient rounded-pill px-4"><i class="bi bi-trash me-1"></i> Delete</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            {{! Results card }}
            <div class="card">
                <div class="card-header">Result</div>
                <div class="card-body">

                    {{!
                        This form targets the delete endpoint and is controlled by JavaScript.
                    }}
                    <form action="/bom-templates/delete" method="post" id="deleteForm">
                        {{#_csrf}}
                            <input type="hidden" name="{{parameterName}}" value="{{token}}"/>
                        {{/_csrf}}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                <tr>
                                    <th style="width: 5%;" class="text-center"><input class="form-check-input" type="checkbox" id="selectAllCheckbox"></th>
                                    <th style="width: 5%;">Seq</th>
                                    <th style="width: 20%;">Template Code</th>
                                    <th style="width: 35%;">Template Name</th>
                                    <th style="width: 25%;">Product Category</th>
                                    <th style="width: 10%;">Action</th>
                                </tr>
                                </thead>
                                <tbody>

                                {{!
                                    Loop through the 'templates' list provided by the Controller.
                                }}
                                {{#templates}}
                                    <tr>
                                        <td class="text-center align-middle">
                                            {{#deletable}}
                                                <input class="form-check-input row-checkbox" type="checkbox" name="selectedIds" value="{{bomTemplateId}}">
                                            {{/deletable}}
                                            {{^deletable}}
                                                <span class="disabled-checkbox-wrapper">
                                                    <input class="form-check-input" type="checkbox" disabled>
                                                </span>
                                            {{/deletable}}
                                        </td>
                                        <td class="p-3 align-middle">{{sequenceNumber}}</td>
                                        <td class="p-3 align-middle">{{bomTemplateCode}}</td>
                                        <td class="py-3 ps-2 align-middle">{{bomTemplateName}}</td>
                                        <td class="py-3 ps-2 align-middle">{{productCategoryName}}</td>
                                        <td class="p-3 align-middle">
                                            <a href="/bom-templates/form?id={{bomTemplateId}}" class="action-link">View</a>
                                        </td>
                                    </tr>
                                {{/templates}}
                                {{^templates}}
                                {{!
                                    Inverted section: Displayed ONLY if the 'templates' list is empty.
                                 }}
                                    <tr>
                                        <td colspan="6" class="text-center text-muted p-4">No templates found. Click 'Create' to add one.</td>
                                    </tr>
                                {{/templates}}
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </main>
        {{> layout/footer}}
    </div>
</div>
{{> layout/scripts}}
<script src="/js/bom-template-list.js"></script>
</body>
</html>
