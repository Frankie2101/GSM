<div id="sidebar-wrapper">
    <div class="sidebar-heading">
        <img src="/images/GSM%20Logo.png" alt="GSM Logo">
    </div>
    <div class="list-group list-group-flush mt-3">

        {{! Dashboard Menu Item - Uses DASHBOARD_VIEW }}
        {{#userPermissions.DASHBOARD_VIEW}}
            <a class="list-group-item list-group-item-action {{#isDashboardPage}}active{{/isDashboardPage}}" href="/dashboard"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a>
        {{/userPermissions.DASHBOARD_VIEW}}

        {{! User Management Menu Item - Uses USER_VIEW }}
        {{#userPermissions.USER_VIEW}}
            <a class="list-group-item list-group-item-action {{#isUserPage}}active{{/isUserPage}}" href="/users"><i class="bi bi-people me-2"></i>User</a>
        {{/userPermissions.USER_VIEW}}

        {{! Master Data Menu Item - Uses MASTER_DATA_VIEW }}
        {{#userPermissions.MASTER_DATA_VIEW}}
            <a class="list-group-item list-group-item-action {{#isMasterDataPage}}active{{/isMasterDataPage}}" href="/master-data"><i class="bi bi-database-gear me-2"></i>Master Data</a>
        {{/userPermissions.MASTER_DATA_VIEW}}

        {{! Product Menu Item - Uses PRODUCT_VIEW }}
        {{#userPermissions.PRODUCT_VIEW}}
            <a class="list-group-item list-group-item-action {{#isProductPage}}active{{/isProductPage}}" href="/products"><i class="bi bi-box-seam me-2"></i>Product</a>
        {{/userPermissions.PRODUCT_VIEW}}

        {{! Fabric Menu Item - Uses FABRIC_VIEW }}
        {{#userPermissions.FABRIC_VIEW}}
            <a class="list-group-item list-group-item-action {{#isFabricPage}}active{{/isFabricPage}}" href="/fabrics"><i class="bi bi-stack me-2"></i>Fabric</a>
        {{/userPermissions.FABRIC_VIEW}}

        {{! Trim Menu Item - Uses TRIM_VIEW }}
        {{#userPermissions.TRIM_VIEW}}
            <a class="list-group-item list-group-item-action {{#isTrimPage}}active{{/isTrimPage}}" href="/trims"><i class="bi bi-threads me-2"></i>Trim</a>
        {{/userPermissions.TRIM_VIEW}}

        {{! BOM Template Menu Item - Uses BOM_TEMPLATE_VIEW }}
        {{#userPermissions.BOM_TEMPLATE_VIEW}}
            <a class="list-group-item list-group-item-action {{#isBomTemplatePage}}active{{/isBomTemplatePage}}" href="/bom-templates"><i class="bi bi-file-earmark-spreadsheet me-2"></i>BOM Template</a>
        {{/userPermissions.BOM_TEMPLATE_VIEW}}

        {{! Sale Order Menu Item - Uses SALE_ORDER_VIEW }}
        {{#userPermissions.SALE_ORDER_VIEW}}
            <a class="list-group-item list-group-item-action {{#isSaleOrderPage}}active{{/isSaleOrderPage}}" href="/sale-orders"><i class="bi bi-cart me-2"></i>Sale Order</a>
        {{/userPermissions.SALE_ORDER_VIEW}}

        {{! BOM Menu Item - Uses BOM_VIEW }}
        {{#userPermissions.BOM_VIEW}}
            <a class="list-group-item list-group-item-action {{#isBomPage}}active{{/isBomPage}}" href="/order-boms"><i class="bi bi-list-ul me-2"></i>BOM</a>
        {{/userPermissions.BOM_VIEW}}

        {{! Purchase Order Menu Item - Uses PURCHASE_ORDER_VIEW }}
        {{#userPermissions.PURCHASE_ORDER_VIEW}}
            <a class="list-group-item list-group-item-action {{#isPurchaseOrderPage}}active{{/isPurchaseOrderPage}}" href="/purchase_orders" ><i class="bi bi-receipt me-2"></i>Purchase Order</a>
        {{/userPermissions.PURCHASE_ORDER_VIEW}}

        {{! Pending Approval Sub-Menu Item - Uses PURCHASE_ORDER_APPROVE }}
        {{#userPermissions.PURCHASE_ORDER_APPROVE}}
            <a class="list-group-item list-group-item-action ps-5" href="/purchase_orders/pending-approval" ><i class="bi bi-hourglass-split me-2"></i>Pending Approval</a>
        {{/userPermissions.PURCHASE_ORDER_APPROVE}}

        {{! Production Output Menu Item - Uses PRODUCTION_OUTPUT_VIEW }}
        {{#userPermissions.PRODUCTION_OUTPUT_VIEW}}
            <a class="list-group-item list-group-item-action {{#isProductionOutputPage}}active{{/isProductionOutputPage}}" href="/production-outputs"><i class="bi bi-graph-up-arrow me-2"></i>Production Output</a>
        {{/userPermissions.PRODUCTION_OUTPUT_VIEW}}
    </div>
</div>